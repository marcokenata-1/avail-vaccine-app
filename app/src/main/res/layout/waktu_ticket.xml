<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_waktu"
        android:layout_width="wrap_content"
        android:fontFamily="@font/questrial_reg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Waktu"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_jumlah_kuota"
        android:layout_width="wrap_content"
        android:fontFamily="@font/questrial_reg"

        app:layout_constraintLeft_toRightOf="@id/tv_waktu"
        app:layout_constraintRight_toLeftOf="@id/tv_sisa_kuota"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="No Data"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sisa_kuota"
        android:layout_width="wrap_content"
        android:fontFamily="@font/questrial_reg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="60dp"
        android:text="No Data"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jumlah_kuota"
        android:background="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_waktu_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/questrial_reg"
        android:text="Waktu"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_waktu_header"
        android:layout_width="wrap_content"
        android:fontFamily="@font/questrial_reg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_jumlah_kuota_header"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_waktu_top"
        android:text="Waktu"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_jumlah_kuota_header"
        android:layout_width="wrap_content"
        android:fontFamily="@font/questrial_reg"
        app:layout_constraintLeft_toRightOf="@id/tv_waktu_header"
        app:layout_constraintRight_toLeftOf="@id/tv_sisa_kuota_header"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_waktu_top"
        android:text="Jumlah Kuota"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sisa_kuota_header"
        android:layout_width="wrap_content"
        android:fontFamily="@font/questrial_reg"
        app:layout_constraintLeft_toRightOf="@id/tv_jumlah_kuota_header"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_waktu_top"
        android:text="Sisa Kuota"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lv_jadwal"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/vw_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jumlah_kuota_header"
        android:background="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>